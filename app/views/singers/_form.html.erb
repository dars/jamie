<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Basic validations
      </header>
      <div class="panel-body">
        <div class="form">
          <%= form_for @singer, html:{role: 'form', class: 'form-horizontal'} do |f| %>
            <% if @singer.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@singer.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @singer.errors.full_message.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.label :SingerNameT, '歌星名稱 (繁)', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :SingerNameT, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :SingerNameC, '歌星名稱 (簡)', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :SingerNameC, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :NameIndexT, '歌星名稱 (繁)', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :NameIndexT, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :NameIndexC, '歌星名稱 (簡)', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :NameIndexC, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :Country, '國別', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.select :Country, content_tag(:option,'select one...',:value=>0)+options_from_collection_for_select(@countries, :id, :name, @singer.Country), {}, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :Class, '組合', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.select :Class, content_tag(:option,'select one...',:value=>0)+options_from_collection_for_select(@kinds, :id, :name, @singer.Class), {}, class:'form-control' %>
              </div>
            </div>
            <div class="actions">
              <%= f.submit "Save", class:'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>

