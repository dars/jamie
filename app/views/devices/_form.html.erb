<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Basic validations
      </header>
      <div class="panel-body">
        <div class="form">
          <%= form_for @device, html:{role: 'form', class: 'form-horizontal'} do |f| %>
            <% if @device.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@device.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @device.errors.full_message.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group" id="serialNumber-form-group">
              <%= f.label :SerialNumber, '機器序號：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :SerialNumber, class:'form-control', id:'serialNumber' %>
                <p class="help-block" id="serialNumber-help-block"></p>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :dealer_id, '經銷商：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.select :dealer_id, content_tag(:option,'select one...',:value=>0)+options_from_collection_for_select(@dealers, :id, :name, @device.dealer_id), {}, class:'form-control'  %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :demo, '公關用機', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.check_box :demo, class:'bs-switch' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :IsCanLogin, '狀態', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.check_box :IsCanLogin, class:'bs-switch' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-6">
                <%= f.submit "Save", class:'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>