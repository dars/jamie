<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Basic validations
      </header>
      <div class="panel-body">
        <div class="form">
          <%= form_for @device, html:{role: 'form', class: 'form-horizontal'} do |f| %>
            <% if @device.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@device.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @device.errors.full_message.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :SerialNumber, '機器序號：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :SerialNumber, class:'form-control'  %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :cus_name, '承租人姓名：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :cus_name, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :cus_uuid, '身份證字號：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :cus_uuid, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :cus_birthday, '生日：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :cus_birthday, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :cus_tel, '電話：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :cus_tel, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :cus_apply_at, '申辦日期：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :cus_apply_at, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :cus_address, '地址：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :cus_address, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-6">
                <%= f.submit "Save", class:'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>