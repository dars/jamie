<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Basic validations
      </header>
      <div class="panel-body">
        <div class="form">
          <%= form_for @dealer, html:{role: 'form', class: 'form-horizontal'} do |f| %>
            <% if @dealer.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@dealer.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @dealer.errors.full_message.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name, '經銷商名稱：', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :name, class:'form-control'  %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-lg-6">
                <%= f.submit "Save", class:'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>