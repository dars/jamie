<% content_for :pageTitle, '經銷商管理' %>
<div class="row">
  <div class="col-sm-12">
    <section class="panel">
      <header class="panel-heading">
        經銷商資料
      </header>
      <div class="panel-body">
        <table class="table table-striped table-hover general-table">
          <thead>
          <tr>
            <th>名稱</th>
            <th colspan="3"></th>
          </tr>
          </thead>
          <tbody>
          <% @dealers.each do |dealer| %>
            <tr>
              <td><%= dealer.name %></td>
              <td>
                <%= link_to '檢視', dealer, class:'btn btn-xs btn-info' %>
                <%= link_to '編輯', edit_dealer_path(dealer), class:'btn btn-xs btn-success' %>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>

<%= link_to '新增經銷商', new_dealer_path, class:'btn btn-default' %>
