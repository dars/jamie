<% content_for :pageTitle, '歌曲資料管理' %>
<div class="row">
  <div class="col-sm-12">
    <section class="panel">
      <header class="panel-heading">
        歌曲列表
      </header>
      <div class="panel-body">
        <table class="table table-striped table-hover general-table">
          <thead>
          <tr>
            <th>歌號</th>
            <th>歌名</th>
            <th>歌手</th>
            <th>語系</th>
            <th>&nbsp;</th>
          </tr>
          </thead>
          <tbody>
          <% @songs.each do |song| %>
            <tr>
              <td><%= song.human_song_number %></td>
              <td><%= song.SongNameT %></td>
              <td><%= song.singer1.SingerNameT %><%= ' / '+song.singer2.SingerNameT if (song.singer2) %></td>
              <td><%= song.phylum.name %></td>
              <td>
                <%= link_to '檢視', {:controller => 'users', :action => 'index'}, class:'btn btn-xs btn-info' %>
                <%= link_to '編輯', {:controller => 'users', :action => 'index'}, class:'btn btn-xs btn-success' %>
                <!--<%= link_to '刪除', {:controller => 'users', :action => 'index'}, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-xs btn-danger' %>-->
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
        <%= will_paginate @songs %>
      </div>
    </section>
  </div>
</div>
<br>

<%= link_to '新增歌曲', new_song_path, class: 'btn btn-default' %>
