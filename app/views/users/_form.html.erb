<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        Basic validations
      </header>
      <div class="panel-body">
        <div class="form">
          <%= form_for @user, html:{role: 'form', class: 'form-horizontal'} do |f| %>
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
                <ul>
                  <% @user.errors.full_message.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group">
              <%= f.label :name, '使用者名稱', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :name, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :email, 'email', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.text_field :email, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, '密碼', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.password_field :password, class:'form-control' %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password, '確認密碼', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.password_field :password_confirmation, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :role, '角色', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.select :role, options_for_select([["管理者", "admin"], ["服務人員", "staff"], ["經銷商", "dealer"], ["授權商", "user"]]), {}, class:'form-control', id:'role_combobox' %>
              </div>
            </div>
            <div class="form-group" id="license_div">
              <%= f.label :license_id, '授權商', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.select :license_id, content_tag(:option,'select one...',:value=>0)+options_from_collection_for_select(@licensees, :id, :name), {}, class:'form-control' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :status, '狀態', class:'control-label col-lg-3' %>
              <div class="col-lg-6">
                <%= f.select :status, options_for_select([["正常", 1], ["停權", 0]]), {}, class:'form-control' %>
              </div>
            </div>
            <div class="actions">
              <%= f.submit "Save", class:'btn btn-primary' %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</div>

