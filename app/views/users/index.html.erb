<% content_for :pageTitle, '帳號資料管理' %>
<div class="row">
  <div class="col-sm-12">
    <section class="panel">
      <header class="panel-heading">
        使用帳號列表
      </header>
      <div class="panel-body">
        <table class="table table-striped table-hover general-table">
          <thead>
            <tr>
              <th>名稱</th>
              <th>email</th>
              <th>角色</th>
              <th>狀態</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <%= role_label user.role, user %>
                </td>
                <td><%= status_label user.status %></td>
                <td>
                  <%= link_to '檢視', user_path(user), class:'btn btn-xs btn-info' %>
                  <%= link_to '編輯', edit_user_path(user), class:'btn btn-xs btn-success' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>
<br>

<%= link_to '新增使用者', new_user_path, class: 'btn btn-default' %>
