<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="">
  <meta name="author" content="ThemeBucket">
  <link rel="shortcut icon" href="images/favicon.png">

  <title><%= yield(:pageTitle) %></title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

  <!-- Just for debugging purposes. Don't actually copy this line! -->
  <!--[if lt IE 9]>
  <script src="js/ie8-responsive-file-warning.js"></script><![endif]-->

  <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
  <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
  <![endif]-->
</head>

<body>

<section id="container" >
  <!--header start-->
  <header class="header fixed-top clearfix">
    <!--logo start-->
    <div class="brand">
      <%= link_to image_tag("logo.png", alt: 'logo'),{:controller => 'licensees' ,:action => 'index'}, class: 'logo'  %>
      <div class="sidebar-toggle-box">
        <div class="fa fa-bars"></div>
      </div>
    </div>
    <!--logo end-->

    <% if signed_in? %>
    <div class="top-nav clearfix">
      <!-- user info start-->
      <ul class="nav pull-right top-menu">
        <!-- user login dropdown start-->
        <li class="dropdown">
          <a data-toggle="dropdown" class="dropdown-toggle" href="#">
            <%= image_tag('user_male.png') %>
            <span class="username"><%= current_user.name %></span>
            <b class="caret"></b>
          </a>
          <ul class="dropdown-menu extended logout">
            <!--<li><a href="#"><i class=" fa fa-suitcase"></i>Profile</a></li>-->
            <!--<li><a href="#"><i class="fa fa-cog"></i> Settings</a></li>-->
            <li><%= link_to 'Logout', logout_path, method: 'delete' %></li>
          </ul>
        </li>
        <!-- user login dropdown end -->
        <li>
          <div class="toggle-right-box">
            <div class="fa fa-bars"></div>
          </div>
        </li>
      </ul>
      <!-- user info end-->
    </div>
    <% end %>
  </header>
  <!--header end-->
  <%= render :partial => '/layouts/partial/sidebar' %>
  <!--sidebar end-->
  <!--main content start-->
  <section id="main-content">
    <section class="wrapper">
      <!-- page start-->
      <%= render :partial => '/layouts/partial/flash_message' %>
      <%= yield %>
      <!-- page end-->
    </section>
  </section>
  <!--main content end-->
  <div class="right-sidebar">
    <div class="right-stat-bar" tabindex="5001" style="overflow: hidden; outline: none;">
      <ul class="right-side-accordion">
        <li class="widget-collapsible">
          <a href="#" class="head widget-head purple-bg active">
            <span class="pull-left"> 熱門點播 (5)</span>
          </a>
          <ul class="widget-container">
            <li>
              <% @hots.each do |s| %>
              <div class="prog-row">
                <div class="user-thumb rsn-activity">
                  <i class="fa fa-music"></i>
                </div>
                <div class="rsn-details ">
                  <p class="text-muted">
                    <%= s.song.singer1.SingerNameT %>
                  </p>
                  <p>
                    <%= [s.songNumberID].pack('l').unpack('H*')[0].scan(/[0-9a-z]{2}/i).reverse.join[3..10] %> <%= s.song.SongNameT %>
                  </p>
                </div>
              </div>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</section>

<!-- Placed js at the end of the document so the pages load faster -->

<!--Core js-->
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
