<% if flash[:notice] %>
<div class="alert alert-success %> fade in">
  <button data-dismiss="alert" class="close close-sm" type="button">
    <i class="fa fa-times"></i>
  </button>
  <%= flash[:notice] %>
</div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger %> fade in">
    <button data-dismiss="alert" class="close close-sm" type="button">
      <i class="fa fa-times"></i>
    </button>
    <%= flash[:alert] %>
  </div>
<% end %>